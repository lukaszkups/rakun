{
  "root": true,
  "extends": [
    "plugin:vue/vue3-essential",
    "@vue/eslint-config-typescript",
    "@vue/eslint-config-prettier"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      },
      {
        "usePrettierrc": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.vue"],
      "rules": {
        "vue/multi-word-component-names": 0
      }
    }
  ]
}
